<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<style>
body { background-color: #b6e9fc; }
  .footer {
            position: fixed;
            bottom: 0;
            text-align: center;
            width: 100%;
            height: 60px; 
            line-height: 60px; 
            background-color: #66d3fa;
          }
img#Logo{
height:200%;
width:auto;
display: inline;
margin-top: -10px;
}
  .navbar-nav > li {
    display: inline-block; 
  }
  .navbar-nav {
    display: inline-block;
    float: none; 

  }
  .navbar-nav > li:hover {
    color: #ffeb3b !important; 
    background-color: #e91e63 !important; 
}
  .navbar {
      background-color: #f55192;
      color: #fcfcfc ;
      border-color: #e7e7e7;     
    }
    .navbar-nav > li.active > a{
    background-color: #fcfcfc !important;  
    color: #000 !important;       
}
.navbar-nav > li > a {
  color: #fcfcfc !important; 
}
.navbar-nav > li:hover > a {
            color: #ffeb3b !important; 
            background-color: #e91e63 !important; 
        }
        .navbar-brand {
          color:  #fcfcfc !important; 
            
        }

 .course-card {
    background-color: #ffe4e1; /* Jasnoróżowe tło */
    border: 1px solid #ff69b4; /* Różowa ramka */
  }
  .course-card-header {
    background-color: #ff69b4; /* Intensywny róż w nagłówku */
    color: white; /* Biały tekst */
  }
  .course-card-title {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  .course-card-text {
    margin-bottom: 1rem; /* Odstęp między tekstami */
  }

  .card {
    background-color: #ffe4e1; /* Jasnoróżowe tło */
    border: 1px solid #ff69b4; /* Różowa ramka */
  }

  .bg-pink {
  background-color: #f8c8d1 !important; /* Jasny różowy */
}

.table-pink th, .table-pink td {
  border-color: #f08080; /* Różowe obramowanie */
}

.table-pink tbody tr:nth-child(odd) {
  background-color: #f5e6ea; /* Jasno różowe tło dla nieparzystych wierszy */
}

.table-pink tbody tr:nth-child(even) {
  background-color: #f8c8d1; /* Jasny różowy tło dla parzystych wierszy */
}

.text-primary {
  color: #d63384 !important; /* Różowy tekst nagłówków */
}

.text-center {
  text-align: center;
}

</style>

</head>

  <body>
    <%= yield %>
  </body>
</html>
