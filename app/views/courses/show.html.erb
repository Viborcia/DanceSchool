<p style="color: green"><%= notice %></p>
<h1>Kurs</h1>
<% if current_user && current_user.role == 'teacher' %>
<center><div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
  <%= link_to "Edytuj kurs", edit_course_path(@course) , class: "btn btn-primary btn-lg",style:"color:white; text-decoration: none;" %> 
  <% end %>
  <center><div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
  <%= link_to "Wróć do kursów" , courses_path , class: "btn btn-primary btn-lg",style:"color:white; text-decoration: none;" %>

<%= render @course %>

  <% if current_user && !@course.users.include?(current_user) %>
  <%= form_with url: course_course_registrations_path(@course), method: :post do %>
    <% if current_user && current_user.role == 'student' %>
    <center><div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
    <%= submit_tag "Zapisz się na kurs" , class: "btn btn-primary btn-lg",style:"color:white; text-decoration: none;" %>
  <% end %>
  <% end %>
<% if current_user && current_user.role == 'teacher' %>
<h2 class="text-primary">Zapisani kursanci</h2>
<table class="table table-striped table-pink">
  <thead class="bg-pink text-white">
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Email</th>
      <th>Numer telefonu</th>
    </tr>
  </thead>
  <tbody>
  <% if @course.users.present? %> 
  <% @course.users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone_number %></td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td colspan="4" class="text-center">Brak zapisanych kursantów na stałe na kurs.</td>
  </tr>
<% end %>
</tbody>
</table>

<% end %>


<h2>Poszczególne lekcje dla <%= @course.name %></h2>

<ul>
  <% @course.lessons.each do |lesson| %>
    <li>
      <%= link_to lesson.name, lesson_path(lesson) %> - <%= lesson.date.strftime("%B %d, %Y at %I:%M %p") %>
      <% if current_user && !lesson.users.include?(current_user) %>
        <%= form_with url: enroll_lesson_path(lesson), method: :post do %>
          <% if current_user && current_user.role == 'student' %>
          <center><div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
          <%= submit_tag "Zapisz się na lekcje", class: "btn btn-primary btn-lg",style:"color:white; text-decoration: none;" %>
  <% end %>
  <% end %>
      <% else %>
      <% if current_user && lesson.users.include?(current_user) %>
      <%= form_with url: unenroll_lesson_path(lesson), method: :post do %>
        <div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
          <%= submit_tag "Wypisz się z lekcji", class: "btn btn-danger btn-lg", style: "color:white; text-decoration: none;" %>
        </div>
      <% end %>
    <% end %>
      <% end %>
    </li>
  <% end %>
</ul>

<div>

<% elsif current_user && @course.users.include?(current_user) %>
  <p>Jesteś zapisany na kurs.</p>
  <%= form_with url: unenroll_course_path(@course), method: :post do %>
    <div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
      <%= submit_tag "Wypisz się z kursu", class: "btn btn-danger btn-lg", style: "color:white; text-decoration: none;" %>
    </div>
  <% end %>

<% else %>
  <p>Zaloguj się, aby zapisać się na kurs.</p>
<% end %>
<% if current_user && current_user.role == 'teacher' %>
<center><div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
  <%= button_to "Usuń kurs" , @course, method: :delete  , class: "btn btn-primary btn-lg",style:"color:white; text-decoration: none;"%>
  <% end %>
  </div>

  

