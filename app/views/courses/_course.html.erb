<div class="container my-4"style="max-width: 1500px, padding-left: 50px; padding-right: 50px;">
  <div class="row">
    <div class="col-md-3 col-sm-6 mb-4" id="<%= dom_id course %>">
      <div class="card course-card" style="min-height: 250px;min-width: 300px;">
        <div class="card-header course-card-header">
          <h5 class="mb-0">
            <%= course.name %>
          </h5>
        </div>
        <div class="card-body d-flex align-items-center justify-content-between">
          <div class="course-details pr-3" style="flex: 1;">
          <p><strong>Dzień:</strong> <%= course.weekday == 0 ? "Niedziela" : course.weekday == 1 ? "Poniedziałek" : course.weekday == 2 ? "Wtorek" : course.weekday == 3 ? "Środa" : course.weekday == 4 ? "Czwartek" : course.weekday == 5 ? "Piątek" : "Sobota"%></p>
          <p><strong>Godzina:</strong> <%= course.start_date.strftime("%H:%M") %></p>
          <p><strong>Poziom:</strong> <%= course.level %></p>
            <p><strong>Instruktor:</strong> <%= course.instructor %></p>
            <p><strong>Data rozpoczęcia:</strong> <%= course.start_date %></p>
          </div> 
          <div class="text-right" style="flex-shrink: 0;">
            <i class="fas fa-music" style="font-size: 2.5rem;"></i>
            <%= link_to "Pokaż kurs", course , class: "btn btn-primary",style:"color:white; text-decoration: none;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
