<h1>Moje kursy</h1>

<center><% if @courses.present? && @courses.any? %>
  <ul>
    <% @courses.each do |course| %>
      <style>
  .course-card {
    background-color: #ffe4e1; /* Jasnoróżowe tło */
    border: 1px solid #ff69b4; /* Różowa ramka */
  }
  .course-card-header {
    background-color: #ff69b4; /* Intensywny róż w nagłówku */
    color: white; /* Biały tekst */
  }
  .course-card-title {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  .course-card-text {
    margin-bottom: 1rem; /* Odstęp między tekstami */
  }
</style>
<div class="container my-4">
  <div id="<%= dom_id course %>" class="card course-card">
    <div class="card-header course-card-header">
      <h5 class="mb-0">
        <%= course.name %>
      </h5>
    </div>
    <div class="card-body">
      <h6 class="course-card-title"><strong>Opis:</strong></h6>
      <p class="course-card-text">
        <%= course.description %>
      </p>

      <h6 class="course-card-title"><strong>Liczba miejsc:</strong></h6>
      <p class="course-card-text">
        <%= course.number_of_place %>
      </p>

      <h6 class="course-card-title"><strong>Poziom:</strong></h6>
      <p class="course-card-text">
        <%= course.level %>
      </p>

      <h6 class="course-card-title"><strong>Data rozpoczęcia:</strong></h6>
      <p class="course-card-text">
        <%= course.start_date %>
      </p>
    </div>
  </div>      <div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
      <%= link_to "Show this course", course, class: "btn btn-primary btn-lg",style:"color:white; text-decoration: none;" %>
    <% end %>
  </ul>
<% else %>
  <p>Brak kursów do wyświetlenia.</p>
<% end %>


