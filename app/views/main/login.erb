            window.location.href = bookmark.href;
            return;
        }
    }

    alert("Nie znaleziono pasujÄ…cej zakÅ‚adki");
}

document.getElementById('searchButton').addEventListener('click', function() {
    redirectToMatchingBookmark();
});

