<div class="container my-4" style="max-width: 900px; padding-left: 30px; padding-right: 30px;">
  <div class="row">
    <div class="col-md-3 col-sm-6 mb-4" id="<%= dom_id lesson %>">
      <div class="card lesson-card" style="min-height: 250px; min-width: 300px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);">
        <div class="card-header lesson-card-header">
          <h5 class="mb-0">
            <center><%= lesson.name %></center>
          </h5>
        </div>
        <div class="card-body d-flex align-items-center justify-content-between">
          <div class="lesson-details pr-3" style="flex: 1;">
            <p>
              <i class="fas fa-calendar-day" data-bs-toggle="tooltip" title="Dzień"></i>
              <%= course.weekday == 0 ? "Niedziela" : course.weekday == 1 ? "Poniedziałek" : course.weekday == 2 ? "Wtorek" : course.weekday == 3 ? "Środa" : course.weekday == 4 ? "Czwartek" : course.weekday == 5 ? "Piątek" : "Sobota" %>
            </p>
            <p>
              <i class="fas fa-clock" data-bs-toggle="tooltip" title="Godzina"></i>
              <%= lesson.date("%H:%M") %>
            </p>
            <p>
              <i class="fas fa-signal" data-bs-toggle="tooltip" title="Poziom"></i>
              <%= course.level %>
            </p>
            <p>
              <i class="fas fa-chalkboard-teacher" data-bs-toggle="tooltip" title="Instruktor"></i>
              <%= course.instructor %>
            </p>
            <p>
              <i class="fas fa-calendar-alt" data-bs-toggle="tooltip" title="Data"></i>
              <%= lesson.date("%Y-%m-%d") %>
            </p>
          </div>
          <div class="text-right" style="flex-shrink: 0;">
            <div>
              <i class="fas fa-music" style="font-size: 2.5rem;"></i>
            </div>
            <%= link_to "Pokaż kurs", lesson , class: "btn btn-primary", style: "color:white; text-decoration: none;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>